{
    "name": "cdk",
    "version": "0.1.0",
    "description": "CDK infrastructure code for cloud gaming platform",
    "bin": {
        "cdk": "dist/bin/cdk.js"
    },
    "scripts": {
        "build": "npm run build:lambda && npm run build:cdk && npm run copy-assets",
        "build:lambda": "cd ../lambda && npm run build",
        "build:cdk": "tsc",
        "copy-assets": "cp -r stepfunctions dist/ 2>/dev/null || true && find dist/stepfunctions -name '*.ts' -delete 2>/dev/null || true",
        "watch": "tsc -w",
        "test": "jest",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean",
        "cdk": "cdk",
        "synth": "npm run build && cdk synth",
        "deploy": "npm run build && cdk deploy",
        "diff": "npm run build && cdk diff",
        "destroy": "cdk destroy",
        "validate-workflows": "node -e \"require('./dist/lib/workflows/index.js').WorkflowRegistry.discoverWorkflows(); console.log('Workflow validation completed successfully');\"",
        "validate-cloudformation": "node scripts/validate-cloudformation.js"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.156",
        "@types/jest": "^29.5.14",
        "@types/node": "^24.9.1",
        "aws-cdk": "2.1029.3",
        "aws-sdk-client-mock": "^4.1.0",
        "aws-cdk": "2.1029.3",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "~5.6.3"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.917.0",
        "@aws-sdk/lib-dynamodb": "^3.917.0",
        "@aws-sdk/util-dynamodb": "^3.917.0",
        "aws-cdk-lib": "2.215.0",
        "constructs": "^10.0.0",
        "path": "^0.12.7"
    }
}
